<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/showOTP"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="30dp"
        android:textSize="18dp"
        android:text="Present OTP : "
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="128dp" />

    <EditText
        android:id="@+id/textOTP"
        android:layout_width="141dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:hint="Enter New OTP"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendOTP"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="287dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/textOTP"
        android:text="SEND OTP"
        app:layout_constraintBottom_toTopOf="@+id/showOTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOTP"
        app:layout_constraintVertical_bias="0.094" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="141dp"
        android:layout_height="62dp"

        android:layout_alignParentTop="true"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/sendOTP"
        android:ems="10"
        android:gravity="center"
        android:hint="mobile Number"
        android:inputType="phone"
        android:maxLength="15" />


</RelativeLayout>